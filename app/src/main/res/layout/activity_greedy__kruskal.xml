<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="wrap_content"
tools:context=".Algos.Greedy_Kruskal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter no of edges :"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:id="@+id/kruskal_edges"/>

    <EditText
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:inputType="number"
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/kruskal_noOfEdges"
        android:background="@drawable/edittext_background"
        />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter no of vertices :"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/kruskal_vertices"/>

        <EditText
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:inputType="number"
            android:gravity="center"

            android:layout_weight="1"
            android:id="@+id/kruskal_noOfVertices"
            android:background="@drawable/edittext_background"
            />


    </LinearLayout>

    <Button
        android:id="@+id/kruskal_button"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:text="Enter" />

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:visibility="gone"
    tools:visibility="visible"
    android:id="@+id/kruskal_entering_data"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EnteringData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:overScrollMode="never"
            android:id="@+id/kruskal_recyclerView"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:backgroundTint="@color/colorAccent"
            android:text="Done"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:id="@+id/kruskal_submitDataButton"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:overScrollMode="never"
            android:id="@+id/kruskal_answer_recyclerView"/>
    </LinearLayout>




</ScrollView>

</LinearLayout>